# config file for IDLAB fiber optic readout software

# config for readout from DSP_cPCI # # # # # # # # # # # # # # # # # # # # # #

# DSP_cPCI card id number:
card=1

# which channels are enabled:
# (channels="0123" for all four or channels="2" just for channel two, etc)
channels="012"
#channels="3"

# config for storage of data in files # # # # # # # # # # # # # # # # # # # #

location_of_raw_datafiles=/data/beamtest/rawdata

location_of_status_and_log_files=/data/beamtest/rawdata

# whether to use datestamp in filename # # # # # # # # # # # # # # # # # # # #
use_datestamp=1

# datafile extensions # # # # # # # # # # # # # # # # # # # # # # # # # # # #
CAMAC_file_extension=".camac"
fiber_file_extension=".fiber"
tracker_file_extension=".tracker"

# config for transfer to pc2 # # # # # # # # # # # # # # # # # # # # # # # # #

# IP address of computer to which to ftp data
#pc2_ip="128.171.30.126"
pc2_ip="192.168.0.148"

# config for analysis of data # # # # # # # # # # # # # # # # # # # # # # # # #

# how verbose to be (3=normal; 5=very verbose):
verbosity=4

# testing stuff # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #

# how many quarter events to read (per channel):
total_number_of_quarter_events_to_read_per_fiber_channel=100

# whether a card is really installed in this computer or not:
should_expect_card_to_be_installed=1

# limits and step sizes (in DAC counts) for the prerun threshold scan
threshold_scan_low_limit=1310
threshold_scan_high_limit=2620
threshold_scan_step_size=10
